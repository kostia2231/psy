<script is:inline>
    gsap.registerPlugin(ScrollTrigger, SplitText);

    window.addEventListener("load", () => {
        const containers = document.querySelectorAll(
            ".text-animate-container-together",
        );
        const allLines = [];
        const splitInstances = [];

        containers.forEach((container) => {
            const children = container.hasAttribute("data-copy-wrapper")
                ? Array.from(container.children)
                : [container];

            children.forEach((el) => {
                const split = new SplitText(el, {
                    type: "lines",
                    linesClass: "text-anim++",
                    mask: "lines",
                });

                splitInstances.push(split);
                allLines.push(...split.lines);

                const textIndent = getComputedStyle(el).textIndent;
                if (textIndent === "0px" && split.lines.length > 0) {
                    split.lines[0].style.paddingLeft = textIndent;
                    el.style.textIndent = "0";
                }
            });
        });

        // начальное состояние
        gsap.set(allLines, { y: "100%" });

        // единая анимация всех строк
        gsap.to(allLines, {
            y: "0%",
            duration: 1,
            stagger: 0.1,
            ease: "power4.out",
            scrollTrigger: {
                trigger: containers[0], // или какой-то родитель контейнеров
                start: "top 95%",
                once: true,
                // markers: true,
            },
        });

        // опционально: очистка SplitText при уходе
        // window.addEventListener("beforeunload", () => {
        //     splitInstances.forEach((split) => split.revert());
        // });
    });
</script>
